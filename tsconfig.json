{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "**/*/@types",
      "./node_modules/@types"
    ],
    "baseUrl": "/",
    "paths": {
      "@yac-assets/*": [
        "assets/*"
      ],
      "@yac/*": [
        "micro-services/*"
      ]
    }
  },
  "exclude": [
    "**/cdk.out",
    "**/api-tests",
    "**/compiled_tests",
    "**/dist",
  ]
}