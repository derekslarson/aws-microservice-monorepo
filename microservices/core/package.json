{
  "name": "@yac/core",
  "version": "0.1.0",
  "scripts": {
    "build": "yarn clean && NODE_OPTIONS=--max-old-space-size=8192 webpack --config ../../config/webpack/webpack.config.ts",
    "build:local": "BUILD_ENV=$(whoami) yarn build",
    "build:dev": "BUILD_ENV=dev yarn build",
    "build:stage": "BUILD_ENV=stage yarn build",
    "build:prod": "BUILD_ENV=prod yarn build",
    "build:unit-tests": "yarn clean:unit-tests && tsc --project tsconfig.test.json",
    "build:e2e-tests": "yarn clean:unit-tests && tsc --project tsconfig.e2e.test.json",
    "clean": "rm -rf ./dist && rm -rf ./cdk.out",
    "clean:unit-tests": "rm -rf ./.nyc_output && rm -rf ./coverage && rm -rf ./compiled_tests",
    "clean:e2e-tests": "rm -rf ./compiled_e2e_tests",
    "synth": "yarn build && cdk synth",
    "synth:local": "yarn build:local && cdk synth",
    "synth:dev": "yarn build:dev && cdk synth",
    "synth:stage": "yarn build:stage && cdk synth",
    "synth:prod": "yarn build:prod && cdk synth",
    "deploy": "yarn build && cdk deploy",
    "deploy:local": "yarn build:local && cdk deploy",
    "deploy:dev": "yarn build:dev && cdk deploy",
    "deploy:stage": "yarn build:stage && cdk deploy",
    "deploy:prod": "yarn build:prod && cdk deploy",
    "destroy:local": "cdk destroy --context environment=$(whoami)",
    "nyc": "nyc node ../../config/jasmine/jasmine.runner.js",
    "nyc:coverage-report": "nyc node ../../config/jasmine/jasmine.runner.js --reporter html --reporter text -t coverage --report-dir coverage/summary",
    "test:e2e": "yarn clean:e2e-tests && yarn build:e2e-tests && ts-node ./e2e/runner.ts --environment=$(whoami)",
    "test:unit": "yarn clean:unit-tests && yarn build:unit-tests && yarn nyc"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "@types/node": "10.17.27",
    "@types/node-jose": "^1.1.8",
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.2.0-alpha.0",
    "aws-cdk": "2.2.0",
    "aws-cdk-lib": "~2.2.0",
    "constructs": "^10.0.13",
    "@types/aws4": "^1.5.2",
    "@types/elasticsearch": "^5.0.37",
    "@types/sharp": "^0.28.4"
  },
  "dependencies": {
    "@yac/util": "0.1.0",
    "aws-sdk": "^2.783.0",
    "aws4": "^1.11.0",
    "inversify": "^5.0.1",
    "jdenticon": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "runtypes": "^6.3.1"
  }
}
